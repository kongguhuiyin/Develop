<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="394dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.5"
        android:background="#e0ffff" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.6"
        app:srcCompat="@drawable/tengxun" />

    <TextView
        android:id="@+id/denglu"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="124dp"
        android:text="登陆"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text7"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="186dp"
        android:text="账号"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/text2"
        android:layout_width="326dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="268dp"
        android:text="密码"
        android:textSize="16dp" />

    <Button
        android:id="@+id/registered"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="352dp"
        android:alpha="0.4"
        android:background="@drawable/button_circle_shape"
        android:text="注册" />

    <Button
        android:id="@+id/login"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="351dp"
        android:layout_toEndOf="@+id/registered"
        android:alpha="0.4"
        android:background="@drawable/button_circle_shape"
        android:text="登录" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="449dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/findPass"
        android:text="忘记密码？点这里找回 ->"
        android:textSize="15dp" />

    <Button
        android:id="@+id/findPass"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="28dp"
        android:alpha="0.4"
        android:background="@drawable/button_circle_shape_zhaohuimima"
        android:text="找回密码" />

</RelativeLayout>