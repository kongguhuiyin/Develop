<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing">

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="458dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.5"
        android:background="#e0ffff" />

    <TextView
        android:id="@+id/NEWS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="27dp"
        android:text="注册账号"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/text7"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="82dp"
        android:text="请输入账号："
        android:textSize="16dp" />


    <EditText
        android:id="@+id/text1"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/mima"
        android:layout_width="127dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="155dp"
        android:text="请输入密码："
        android:textSize="16dp" />

    <EditText
        android:id="@+id/mimakuang"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/remima"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="229dp"
        android:text="请重新输入密码："
        android:textSize="16dp" />

    <EditText
        android:id="@+id/remimakuang"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="322dp"
        android:text="请选择您的性别："
        android:textSize="16dp" />

    <RadioGroup
        android:id="@+id/radio1"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="167dp"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="71dp">

        <RadioButton
            android:id="@+id/but1"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="男"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/but2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/radio1"
            android:layout_alignBottom="@+id/radio1"
            android:checked="false"
            android:text="女"
            android:textSize="16dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="363dp"
        android:text="请输入邮箱："
        android:textSize="16dp" />

    <EditText
        android:id="@+id/emailKuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="351dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/registered"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="409dp"
        android:layout_marginEnd="37dp"
        android:alpha="0.5"
        android:background="@drawable/button_circle_shape"
        android:text="立即注册" />

</RelativeLayout>
